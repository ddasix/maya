<% layout('layout') -%>	
<div class='board'>
	<h4><span class="upper">게시판 등록</span></h4>
	<form name="insert" id="insert">
		<table summary="<%=title%> 등록" style="margin-top:10px; margin-bottom:10px;">
			<caption><%=title%> 등록</caption>
			<colgroup>
				<col width="13%"/>
				<col width="87%"/>
			</colgroup>
			<tr>
				<td>
					<select name="division" id="division" style="border-radius:5px;padding-left: 5px;" required>
						<option value="">::선택::</option>
						<% for(var i=0;i<menus.length;i++){ %>
							<%if(menus[i].url.indexOf('board')> 0){%>
								<option value="<%=menus[i].url.split('/')[2]%>" <%if(menus[i].name == title){%>selected<%}%> ><%=menus[i].name%></option>
							<%}%>
						<%}%>
					</select>
				</td>
				<td>
					<input type="text" name="title" id="title" class="text" placeholder='제목을 입력해주세요.' required >
				</td>
			</tr>
			<tr>
				<td colspan="2">
					<div style="margin-top:5px;margin-bottom:5px;">
						<textarea name="content" id="content" placeholder='내용을 입력해주세요.' required ></textarea>
					</div>
				</td>
			</tr>
		</table>
		<div align="center" style="margin-bottom:5px;"><input type="submit" value=" 등록 " ng-click="insertBoard();" /></div>
	</form>
</div>