<% layout('layout') -%>	
<div class='box'>
	<h4><span class="upper">게시판 수정</span></h4>
	<form name="modify" id="modify">
		<input type="hidden" name="_id" id="_id" value="<%=boardInfo._id%>" >
		<table summary="<%=title%> 수정" style="margin-top:10px; margin-bottom:10px;">
			<caption><%=title%> 수정</caption>
			<colgroup>
				<col width="15%"/>
				<col width="85%"/>
			</colgroup>
			<tr>
				<td>
					<select name="division" id="division" style="border-radius:5px;padding-left: 5px;" required>
						<option value="">::선택::</option>
						<% for(var i=0;i<menus.length;i++){ %>
							<%if(menus[i].url.indexOf('board')> 0){%>
								<option value="<%=menus[i].url.split('/')[2]%>" <%if(menus[i].url.split('/')[2] == boardInfo.division){%>selected<%}%> ><%=menus[i].name%></option>
							<%}%>
						<%}%>
					</select>
				</td>
				<td>
					<input type="text" name="title" id="title" class="text" placeholder="제목을 입력해주세요." required value="<%=boardInfo.title%>">
				</td>
			</tr>
			<tr>
				<td colspan="2">
					<div style="margin-top:5px;margin-bottom:5px;">
						<textarea name="content" id="content" id="content" placeholder='내용을 입력해주세요.' required ><%-boardInfo.content%></textarea>
						<script>
							var oEditors = [];
							nhn.husky.EZCreator.createInIFrame({
								oAppRef: oEditors,
								elPlaceHolder: "content",
								sSkinURI: "/smartEditorBasic2/SmartEditor2Skin.html",
								fCreator: "createSEditor2"
							});							
						</script>
					</div>
				</td>
			</tr>
		</table>
		<div align="center" style="margin-bottom:5px;"><input type="submit" value=" 수정 " ng-click="modifyBoard();" /></div>
	</form>
</div>